<div class="row">
  <div class="col-12">
    <a href="<%= root_path %>" class="btn btn-secondary btn-lg btn-block">
      <i class="fa fa-long-arrow-alt-left"></i> Back
    </a>
  </div>
</div>

<div id="gallery" style="display:none;">
  <% pictures.each do |picture| %>
    <a href="#">
      <img alt=""
          src="<%= picture.thumb_fname %>"
          data-image="<%= picture.path %>"
          data-description=""
          style="display:none">
    </a>
  <% end %>
</div>

<div class="row">
  <div class="col-12">
    <a href="<%= root_path %>" class="btn btn-secondary btn-lg btn-block">
      <i class="fa fa-long-arrow-alt-left"></i> Back
    </a>
  </div>
</div>


<% content_for :js do %>
  <script type="text/javascript">
    $("#gallery").unitegallery();
  </script>
<% end %>
